<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewPhoto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="@color/colorBluePrimary"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="8dp"
    card_view:strokeColor="@color/colorBluePrimaryDark"
    card_view:strokeWidth="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:text="@string/app_name"
            card_view:layout_constraintBottom_toTopOf="@+id/content_photo"
            card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/content_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/gallery"
            android:paddingBottom="24dp"
            android:src="@drawable/forest"
            android:textAppearance="?attr/textAppearanceListItem"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/title" />

        <ImageButton
            android:id="@+id/chip_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_star_border_black_24dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/content_photo" />

        <ImageButton
            android:id="@+id/chip_favorite_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_favorite_border_black_24dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/content_photo"
            card_view:layout_constraintStart_toStartOf="@+id/content_photo" />

        <ImageButton
            android:id="@+id/chip_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:background="@drawable/ic_favorite_black_24dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="@+id/content_photo"
            card_view:layout_constraintStart_toStartOf="@+id/content_photo" />

    </android.support.constraint.ConstraintLayout>

</android.support.design.card.MaterialCardView>
